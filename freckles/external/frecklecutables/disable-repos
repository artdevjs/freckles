doc:
  help: ensures the specified repositories are not used by default, no previously enabled repos will be deleted
args:
  repos:
    arg_name: repo
    required: true
    nargs: -1
    is_var: false
    is_argument: true
  freckles_config_update_repos:
    help: whether to update the non-disabled existing repos
    arg_name: update
    required: false
    default: false
    is_flag: true
    is_var: true
vars:
  freckles_config_tasks: >
    disable_repos:
    {% for r in repos %}
         - {{ r | to_nice_json() }}
    {% endfor %}

tasks:
  - makkus.freckles-config:
     freckles_config_tasks
